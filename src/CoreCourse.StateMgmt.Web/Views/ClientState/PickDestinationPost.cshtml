@model CoreCourse.StateMgmt.Web.Models.ClientState.ElmoStatusVm
@{
    ViewData["Title"] = "Client State - Post";

}
<h2>Client State</h2>

<section>
    <header><h3>Elmo's perilous hike - Hidden Fields</h3></header>
    <p>Elmo's inventory:</p>
    <div>
        <ul>
            @foreach (var item in Model.Inventory)
            {
                <li>@item</li>
            }
        </ul>
    </div>
    <p>Now he's ready for the road! Pick your destination carefully:</p>
    <div>
        <form asp-action="FreezingMountains">
            @foreach (var item in Model.Inventory)
            {
                <input type="hidden" name="inventory" value="@item" />
            }
            <button type="submit">Travel to the <b>Freezing Mountains</b></button>
        </form>
        <form asp-action="ScorchingDesert">
            @foreach (var item in Model.Inventory)
            {
                <input type="hidden" name="inventory" value="@item" />
            }
            <button type="submit">Travel to the <b>Scorching Desert</b></button>
        </form>
    </div>
</section>